<form method="post" action="/questions" id="new_entry">
  <label for="question[title]">Title:</label>
  <input name="question[title]" type="text"><br><br>
  <label for="question[description]">Question:</label>
  <textarea name="question[description]" form="new_entry" rows='10' style="width: 25%" placeholder="your question here"></textarea><br><br>
  <input type='hidden' name='question[author_id]' value='<%= session[:user_id] %>'>
  <input type="submit" value="Create Question">
</form>
