  <label for="answer[title]">Title:</label>
  <input name="answer[title]" type="text"><br><br>
  <label for="answer[body]">Body:</label>
  <textarea name="answer[body]" form="new_answer" rows='10' style="width: 25%" placeholder="your answer here"></textarea><br><br>
  <input type="submit" value="Create Answer">
</form>
