<% if same_user? %>
<a href='/questions/:question_id/answers/:id/edit'>Edit This Answer</a>
<form method="post" action="/questions/:question_id/answers/<%= @answer.id %>">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete This Answer">
</form>
<% end %>




<h1><%= @answer.title %></h1>
<h4>By: <%= @answer.commenter.username %></h4>
<p><%= @answer.description %></p>

